{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node-modules",
			".vscode",
			".env",
			".gitignore",
			"docker-compose.yaml"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"bracketSpacing": true,
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 80,
		"formatWithErrors": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"arrowParentheses": "asNeeded",
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		}
	}
}